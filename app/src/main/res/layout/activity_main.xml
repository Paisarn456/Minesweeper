<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/bg"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"

        >


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_margin="15dp"
            app:srcCompat="@drawable/minesweeper7" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/button_Easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/wordeasy" />

        <Button
            android:id="@+id/button_Hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/wordhard" />

        <Button
            android:id="@+id/button_Highscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/wordhighscore" />

        <Button
            android:id="@+id/button_HowToPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/wordhowtoplay" />


    </LinearLayout>


</LinearLayout>
